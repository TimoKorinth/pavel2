<UserControl x:Class="Pavel2.GUI.ParserOptions"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:gui="clr-namespace:Pavel2.GUI">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal">
            <Label>Parser:</Label>
            <ComboBox Name="parserList" />
        </StackPanel>
        <gui:PropertyGrid Grid.Row="1" x:Name="parserPropertyGrid" />
    </Grid>
</UserControl>
