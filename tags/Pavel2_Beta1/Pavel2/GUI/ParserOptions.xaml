    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:gui="clr-namespace:Pavel2.GUI">
    <ItemsControl>
        <StackPanel Orientation="Horizontal" Margin="5">
            <TextBlock Width="120" Margin="0,0,8,0" 
                       TextAlignment="Right" VerticalAlignment="Center">Parser:</TextBlock>
            <ComboBox Name="parserList" />
        </StackPanel>
        <gui:PropertyGrid Grid.Row="1" x:Name="parserPropertyGrid" />
    </ItemsControl>
</UserControl>
